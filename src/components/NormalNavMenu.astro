---
import Link from "./Link.astro";
import DropDown from "./DropDown.astro"
//data imports
import navData from "../data/navData.js"
import { Image } from 'astro:assets';
---

<ul>
    {
        navData.map((item) => (
            item.type ==="dropdown" ? 
            <DropDown text="Projekty" elements={item.elements}/>
            :
            <Link 
                href={item.path as string} 
                text={item.name} 
                style="primary" 
                isFilled={false}
                borderVisible={false}
                data-navLink
                />
        ))
    }
</ul>