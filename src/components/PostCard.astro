---
import { slugify, formatDate } from "../js/utils";
import { Image } from "astro:assets";
//component imports
import Link from "./Link.astro"

interface Props {
    data:{
        title:string;
        date:number;
        author:string;
        description:string;
        category:string;
        cover:{
            img:string;
            alt:string;
        };
    },
    url:string;
    tagType:string;
}

const {data,url, tagType} = Astro.props;
const {title,date,author,description,category,cover} = data;

const Tag = tagType;

import { Icon } from 'astro-icon/components';
---


<article class="card" >
        <small>
            <a href={`/category/${slugify(category)}/`} class="badge">{category}</a> 
        </small>
        <a href={`/blog/${url}`} aria-hidden="true" tabindex="-1">
            <Image 
            src={cover.img} 
            alt={cover.alt}
            width="400"
            height="250"
            format="webp"
            decoding="async"
            loading="lazy"
            quality={80}
            >
        </a>
        <div class="content">            
            <div>
                <Tag><a href={`blog/${url}`}>{title}</a></Tag>
                <small> 
                    <Icon 
                        name="ph:pencil-fill" 
                        width={16}/> 
                        <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {formatDate(date)}</small>
            </div>
            <p>{description}</p>
            <Link 
                href={`/blog/${url}`}
                text="Czytaj"
                style="secondary"
                />
        </div>


</article>